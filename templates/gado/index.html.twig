{% extends 'base.html.twig' %}
{% block title %}{{ titulo }}{% endblock %}
{% block body %}
<h1>{{ titulo }}</h1>
<a href={{ path('adicionar_gado') }} class="btn btn-primary mb-2">Adicionar</a>
<table class="table">
    <thead>
        <tr>
            <td>#</td>
            <td>Código</td>
            <td>Leite(por litro)</td>
            <td>Ração(por semana)</td>
            <td>Peso(Kg)</td>
            <td>Nascimento</td>
            <td>Fazenda</td>
            <td>Abate</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody>
    {% for gado in gados %}
        <tr>
            <td>{{ gado.id }}</td>
            <td>{{ gado.codigo }}</td>
            <td>{{ gado.leite }}</td>
            <td>{{ gado.racao }}</td>
            <td>{{ gado.peso }}</td>
            <td>{{ gado.nascimento|date("d/m/Y") }}</td>
            <td>{{ gado.fazenda.nome }}</td>
            {% if gado.abate == false %}
                <td class="bg-success text-center rounded">
                    Não abatido
                </td>
            {% endif %}
            {% if gado.abate == true %}
                <td class="bg-danger text-center rounded">
                    Abatido
                </td>
            {% endif %}
            <td>
                {% if gado.abate == false %}
                    <a href="{{ path('editar_gado', {id: gado.id}) }}" class="btn btn-primary">Editar</a>
                {% endif %}
                {% if gado.abate == true %}
                    <a class="btn btn-secondary">Editar</a>    
                {% endif %}
                <a href="{{ path('excluir_gado', {id: gado.id}) }}" class="btn btn-primary">Excluir</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}